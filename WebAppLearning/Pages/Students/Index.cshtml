@model WebAppLearning.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Main";
}

<h1>Students</h1>

<p>
    <a asp-page="Create">Add New</a>
</p>
<form>
    <p>
        <select asp-for="StudentAbout" asp-items="Model.Abouts">
            <option value="">All</option>
        </select>
        Subject: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].AdmissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Age)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Student[0].SubjectTeacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].About)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmissionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
             <td>
                    @Html.DisplayFor(modelItem => item.SubjectTeacher)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
