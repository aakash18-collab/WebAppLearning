@*@model IEnumerable<MvcStudent.Models.Student>*@
@model MvcStudent.Models.StudentAgeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<form asp-controller="Students" asp-action="Index" method="get">
    <p>
        
        <select asp-for="StudentAbout" asp-items="Model.Abouts">
            <option value="">All</option>
        </select>

        Subject: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].AdmissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Age)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Students[0].SubjectTeacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].About)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Students) 
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdmissionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectTeacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
            @*Controller with parameter Id of 4*@
            @* <td>
                <a href="/Students/Edit/2"> Edit </a> |
                <a href="/Students/Details/2"> Details </a> |
                <a href="/Students/Delete/2"> Delete </a>
            </td>*@
        </tr>
}
    </tbody>
</table>
